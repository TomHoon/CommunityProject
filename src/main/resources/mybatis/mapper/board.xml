<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newlecture.web.dao.BoardDao">
	<select id="getBoardAll" resultType="com.newlecture.web.entity.BoardEntity">
		select * from board
	</select>
	
	<select id="searchBoard" parameterType="com.newlecture.web.entity.BoardEntity">
		select * from board
		where title = #{title}
	</select>
	
	<insert id="addBoard" parameterType="com.newlecture.web.entity.BoardEntity">
		insert into board(
			member_id, 
			gubun, 
			title, 
			content, 
			writer, 
			recommend, 
			hit
		)
		values (
			#{member_id},
		    #{gubun},
		    #{title},
		    #{content},
		    #{writer},
		    #{recomment},
			#{hit}		    
		 );
	</insert>
	<delete id="deleteBoard" parameterType="com.newlecture.web.entity.BoardEntity">
		delete from board where id = #{id};
	</delete>
	<update id="updateBoard" parameterType="com.newlecture.web.entity.BoardEntity">
		update board set 
			gubun = #{gubun},
			title = #{title},
			content = #{content}
		where 
			id = #{id}
	</update>
	<update id="upateHitBoard" parameterType="com.newlecture.web.entity.BoardEntity">
		update board set 
			hit = #{hit} + 1
		where 
			id = #{id}
	</update>
	<update id="upateRecommendBoard" parameterType="com.newlecture.web.entity.BoardEntity">
		update board set 
			recommend = #{recommend} + 1
		where 
			id = #{id}
	</update>
</mapper>